    "tasks": [
        {
            "type": "cppbuild",
            "label": "生成 test",
            "command": "/usr/bin/clang",
            "args": [
                "-w",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/test/test.c",
                "-o",
                "${workspaceFolder}/test/test",
                "`pkg-config", "--cflags", "--libs", "mysqlclient`",
                "`pkg-config", "--cflags", "--libs", "openssl`",
                "`pkg-config", "--cflags", "--libs", "libcurl`"
            ],
            "options": {
                // "cwd": "${fileDirname}"
                
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
